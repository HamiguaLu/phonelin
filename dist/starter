#!/bin/sh
appname=PhoneLin


dirname=$PWD


shortcutname=$dirname/PhoneLin.desktop
if [ ! -f $shortcutname ]; then
echo '[Desktop Entry]' > $shortcutname
echo 'Name=PhoneLin' >> $shortcutname
echo 'Comment=Run PhoneLin' >> $shortcutname
echo 'Exec='$dirname'/starter' >> $shortcutname
echo 'Icon='$dirname'/icon.png' >> $shortcutname
echo 'Terminal=false' >> $shortcutname
echo 'Type=Application' >> $shortcutname
chmod +x $shortcutname
fi


echo $dirname
LD_LIBRARY_PATH=$dirname
#QT_PLUGIN_PATH=$dirname/plugins
#QT_QPA_PLATFORM_PLUGIN_PATH=$dirname/plugins
#echo $QT_PLUGIN_PATH
export LD_LIBRARY_PATH
#export QT_PLUGIN_PATH
#export QT_QPA_PLATFORM_PLUGIN_PATH
chmod +x $dirname/$appname
$dirname/$appname "$@"